<h1>Update Pet</h1>

Edit <%= @pet.name %>

<form action="/pets/<%= @pet.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <label>Edit Pet's Name</label>
  <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">
  <br>
  Existing Owners: <br>
  <% Owner.all.each do |owner| %>
    <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%=owner.id%>"<%="checked" if @pet.owner == owner %>><%=owner.name%></input>
  <% end %>
  <br>
  New Owner: <br>
  Owner Name: <input type="text" name="owner[name]" id="owner_name"></input>

  <input type="submit" id="Update Pet">
</form>
