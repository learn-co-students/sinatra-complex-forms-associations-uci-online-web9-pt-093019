<h1>Update Pet</h1>
<br>
<br>
<form action="/pets/<%= @pet.id %>" method="POST">
    <input type="hidden" id="hidden" name="_method" value="PATCH">
    <label>Pet Name:</label>
    <input type="text" id="pet_name" name="pet[name]" value="<%= @pet.name %>">
    <br>
    <h3>Select New Owner or Create New Owner Below</h3>
    <p>Existing Owners:</p>
    <br>
    <% @owners.each do |owner| %>
        <input type = "radio" id="<%= owner.id %>" name="pet[owner_id]" value="<%= owner.id %>"
        <%='checked' if owner.pets.include?(@pet) %>><%= owner.name %>
    <% end %>
    <br>
    <br>
    <p>Create New Owner:</p>
    <br>
    <label>Owner Name:</label>
    <input type="text" id = "owner_name" name="owner[name]">
    <br>
    <br>
    <input type="submit" value="Update Pet">
</form>
